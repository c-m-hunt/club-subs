{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "es2019"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "src",
        "paths": {
            "*": [
                "node_modules/*",
                "types/*",
                "*"
            ],
            "api/*": [
                "api/*"
            ],
            "club/*": [
                "club/*"
            ],
            "lib/*": [
                "lib/*"
            ],
            "util": [
                "util"
            ],
            "logger": [
                "logger"
            ],
            "config": [
                "config"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ]
}